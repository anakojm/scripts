#!/bin/bash

is_mute() {
    pactl list sink-inputs | perl -0777 -pe "s/.*$(get_index "$1").*?Mute: ((?:yes|no).).*/\1/gs"
}

adjust_muteness() {
    local index=$(get_index "$1")
    [[ "$index" ]] && pactl set-sink-input-mute "$index" $2 >/dev/null
}

get_index() {
    local pid=$(pidof "$1")
    if [[ -z "$pid" ]]; then
        echo "error: no running processes for: $1" >&2
    else
        pactl list sink-inputs |
        awk -v pid=$pid ' 
            $1 == "Sink" && $2 == "Input" {idx = $3}
            $1 == "application.process.id" && $3 == "\"" pid "\"" {print idx; exit}
        ' | tr -d "#"
    fi
}

if [[ $(is_mute "$1") == "no" ]];
then
    adjust_muteness "$1" 1
else
    adjust_muteness "$1" 0
fi
